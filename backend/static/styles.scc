body {
    background-color: #f5f5f5;
    font-family: Arial;
    padding: 20px;
}


.card-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}
.card {
  border: 1px solid #ccc;
  padding: 10px;
  width: 220px;
  text-align: center;
  position: relative;
}
.card img {
  max-width: 100%;
  height: auto;
}
.heart-btn {
  background: none;
  border: none;
  font-size: 20px;
  cursor: pointer;
  transition: transform 0.2s;
}
.heart-btn:hover {
  transform: scale(1.4);
}

